<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.edu.ufabc.padm.cardioufabc.views.MedidorFragment">

    <TextView
        android:id="@+id/tituloTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textColor="@color/ap_black"
        android:paddingLeft="10dp" />

    <TextView
        android:layout_width="319dp"
        android:layout_height="100dp"
        android:text=" Pressione o botão para começar a medir"
        android:textSize="25dp"
        android:paddingTop="10dp"
        android:layout_gravity="center"
        android:textAlignment="center"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iniciar"
        android:textSize="40dp"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:background="#FF6969"
        android:textColor="#fff"
        android:layout_gravity="center"/>

    <com.androidplot.xy.XYPlot
        style="@style/APDefacto.Light"
        android:id="@+id/plot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:title="Frequência"
        app:rangeTitle="range"
        app:domainTitle="domain"
        app:lineLabels="left|bottom"
        app:lineLabelRotationBottom="-45"/>

</FrameLayout>
