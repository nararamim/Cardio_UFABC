<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="br.edu.ufabc.padm.cardioufabc.views.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="416dp"
            android:layout_height="187dp"
            android:background="@color/theme_color"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:theme="@style/ThemeOverlay.AppCompat.Dark">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="24dp"
                android:text="CardioUFABC"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:text="Última medição:"
            android:textSize="25dp"
            android:paddingTop="10dp"
            android:textAlignment="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:id="@+id/last_btm"
            android:textSize="25dp"
            android:paddingTop="10dp"
            android:textAlignment="center"
            />
        <Button
            android:layout_width="334dp"
            android:layout_height="wrap_content"
            android:text="Iniciar medição cardíaca"
            android:textSize="40dp"
            android:layout_marginTop="50dp"
            android:padding="20dp"
            android:background="#000"
            android:textColor="#fff"
            android:id="@+id/button_home_iniciar"
            android:onClick="iniciarMedicao"/>
    </LinearLayout>

</FrameLayout>
